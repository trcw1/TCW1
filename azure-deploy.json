{
  "name": "TCW1 Payment Wallet",
  "description": "Cryptocurrency and PayPal payment wallet with video/voice chat",
  "version": "1.0.0",
  "author": "Your Name",
  "keywords": [
    "cryptocurrency",
    "payment",
    "wallet",
    "paypal",
    "bitcoin",
    "ethereum",
    "chat",
    "video"
  ],
  "deployment": {
    "azure": {
      "resourceGroup": "tcw1-rg",
      "location": "eastus",
      "appServicePlan": "tcw1-plan",
      "backendApp": "tcw1-backend",
      "frontendApp": "tcw1-frontend",
      "sku": "F1",
      "tier": "Free",
      "instances": 1
    },
    "runtime": {
      "backend": "NODE|18-lts",
      "frontend": "NODE|18-lts"
    }
  },
  "backend": {
    "name": "tcw1-backend",
    "version": "1.0.0",
    "runtime": "Node.js 18",
    "buildCommand": "npm run build",
    "startCommand": "npm start",
    "port": 3001,
    "environment": {
      "NODE_ENV": "production",
      "PORT": "3001",
      "CORS_ORIGIN": "https://yourdomain.com",
      "LOG_LEVEL": "info"
    },
    "dependencies": {
      "express": "^4.18.2",
      "socket.io": "^4.8.3",
      "axios": "^1.6.2",
      "cors": "^2.8.5",
      "dotenv": "^16.0.3",
      "ethereum": "ethers"
    }
  },
  "frontend": {
    "name": "tcw1-frontend",
    "version": "1.0.0",
    "framework": "React 18",
    "buildTool": "Vite",
    "buildCommand": "npm run build",
    "preview": "npm run preview",
    "port": 3000,
    "environment": {
      "VITE_API_URL": "https://api.yourdomain.com",
      "VITE_ENVIRONMENT": "production",
      "VITE_APP_NAME": "TCW1"
    }
  },
  "features": {
    "cryptocurrency": {
      "enabled": true,
      "currencies": ["BTC", "ETH", "USDT"],
      "apis": ["Coinbase", "Etherscan", "Blockchain"]
    },
    "paypal": {
      "enabled": true,
      "sandbox": false
    },
    "communication": {
      "chat": true,
      "videoCall": true,
      "voiceCall": true,
      "technology": "WebRTC"
    },
    "email": {
      "enabled": true,
      "provider": "Azure Communication Services",
      "templates": ["transaction", "welcome", "notification"]
    }
  },
  "database": {
    "type": "MongoDB",
    "connectionString": "mongodb+srv://user:password@cluster.mongodb.net/tcw1",
    "collections": {
      "users": {
        "fields": ["_id", "username", "email", "walletAddress", "createdAt"]
      },
      "transactions": {
        "fields": ["_id", "from", "to", "amount", "currency", "status", "timestamp"]
      },
      "chat_messages": {
        "fields": ["_id", "from", "to", "message", "timestamp"]
      }
    }
  },
  "security": {
    "https": true,
    "cors": {
      "enabled": true,
      "origins": ["https://yourdomain.com", "https://www.yourdomain.com"]
    },
    "rateLimit": {
      "enabled": true,
      "windowMs": 900000,
      "maxRequests": 100
    },
    "helmet": true,
    "contentSecurity": true
  },
  "monitoring": {
    "applicationInsights": true,
    "logging": {
      "level": "info",
      "transport": ["console", "file", "azure"]
    },
    "alerts": {
      "downtime": true,
      "errors": true,
      "performance": true
    }
  },
  "scaling": {
    "autoScale": true,
    "minInstances": 1,
    "maxInstances": 5,
    "cpuThreshold": 80,
    "memoryThreshold": 85
  },
  "backup": {
    "enabled": true,
    "frequency": "daily",
    "retention": "30 days",
    "target": "Azure Storage"
  },
  "deployment": {
    "method": "GitHub Actions",
    "branches": ["main", "deploy"],
    "environments": ["development", "staging", "production"],
    "slots": ["production", "staging"],
    "healthCheck": "/health",
    "warmup": true
  },
  "costs": {
    "estimatedMonthly": "$15-30",
    "components": {
      "appService": "$0 (free tier)",
      "storage": "~$1",
      "communication": "~$5",
      "applicationInsights": "~$1"
    }
  }
}
