# Frontend Environment Variables (copy to .env.production)

# API Configuration
VITE_API_URL=https://api.tcw1.org
VITE_API_TIMEOUT=30000

# App Settings
VITE_APP_NAME=TCW1
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=production

# Feature Flags
VITE_ENABLE_CRYPTO=true
VITE_ENABLE_PAYPAL=true
VITE_ENABLE_CHAT=true
VITE_ENABLE_VIDEO=true

# Analytics (optional)
# VITE_GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
# VITE_SENTRY_DSN=https://key@sentry.io/project

# Crypto Currencies
VITE_SUPPORTED_CURRENCIES=BTC,ETH,USDT,PAYPAL

# WebSocket Configuration
VITE_SOCKET_IO_URL=https://tcw1.org
VITE_SOCKET_IO_PATH=/socket.io

# Rate Limiting
VITE_REQUEST_TIMEOUT=30000
VITE_RETRY_ATTEMPTS=3

# Browser
VITE_ALLOW_LOCALHOST=false
VITE_ENABLE_DEVTOOLS=false
