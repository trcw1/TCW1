# Backend Environment Variables (copy to .env.production)

# Server
PORT=3001
NODE_ENV=production
HOST=0.0.0.0

# Application
APP_NAME=TCW1
APP_VERSION=1.0.0

# CORS Settings
CORS_ORIGIN=https://tcw1.org,https://www.tcw1.org,https://api.tcw1.org

# Database (if using)
# DB_URL=mongodb+srv://user:password@cluster.mongodb.net/tcw1
# DATABASE_HOST=your-db-server
# DATABASE_PORT=5432
# DATABASE_USER=your_user
# DATABASE_PASSWORD=your_password

# Email Configuration
# Option 1: Azure Communication Services
AZURE_COMMUNICATION_CONNECTION_STRING=your_connection_string
SENDER_EMAIL=noreply@yourdomain.com

# Option 2: Outlook/Office365
# SMTP_HOST=smtp-mail.outlook.com
# SMTP_PORT=587
# SMTP_USER=your-email@outlook.com
# SMTP_PASSWORD=your_app_password
# SMTP_FROM=noreply@tcw1.org

# Cryptocurrency APIs (optional)
# COINBASE_API_KEY=your_key
# ETHERSCAN_API_KEY=your_key
# BLOCKCHAIN_API_KEY=your_key

# PayPal Integration (optional)
# PAYPAL_CLIENT_ID=your_id
# PAYPAL_CLIENT_SECRET=your_secret
# PAYPAL_MODE=production

# Session/Auth
# JWT_SECRET=your_jwt_secret_key_min_32_chars
# SESSION_SECRET=your_session_secret

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/tcw1/app.log

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
API_KEY_REQUIRED=false

# Feature Flags
ENABLE_CRYPTO=true
ENABLE_PAYPAL=true
ENABLE_EMAIL_NOTIFICATIONS=true
MAINTENANCE_MODE=false
